<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zuoyeo.ui.activity.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>
<LinearLayout
    android:id="@+id/lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/shi"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="首页"
        android:button="@null"
        android:drawableTop="@drawable/selector_home"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/but_zi"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="定制"
        android:button="@null"
        android:drawableTop="@drawable/two"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/le"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="当地玩乐"
        android:button="@null"
        android:drawableTop="@drawable/home3"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/wo"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="我的"
        android:button="@null"
        android:drawableTop="@drawable/home4"
        android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>
